<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="24dp">

    <TextView
        android:id="@+id/fileOptionsTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="Options"
        app:layout_constraintBottom_toTopOf="@+id/deleteTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/deleteTextView"
        style="@style/fileDialogOption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Delete"
        app:drawableLeftCompat="@drawable/ic_delete_grey_24dp"
        app:drawableStartCompat="@drawable/ic_delete_grey_24dp"
        app:layout_constraintBottom_toTopOf="@+id/copyTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fileOptionsTextView" />

    <TextView
        android:id="@+id/copyTextView"
        style="@style/fileDialogOption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Copy"
        app:drawableLeftCompat="@drawable/ic_content_copy_grey_24dp"
        app:drawableStartCompat="@drawable/ic_content_copy_grey_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deleteTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>